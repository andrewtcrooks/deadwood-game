{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            // Use the Gradle Wrapper to execute the 'clean' task
            "command": "./gradlew clean",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            // Use the Gradle Wrapper to execute the 'build' task
            "command": "./gradlew build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "dependsOn": "clean",
            "problemMatcher": "$gradle",
            "presentation": {
                "reveal": "always"
            },
        },
        {
            "label": "run",
            "type": "shell",
            // Use the Gradle Wrapper to execute the 'run' task
            "command": "./gradlew run",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            // "group": {
            //     "kind": "test",
            //     "isDefault": true
            // },
            // "dependsOn": "build"
        }

    ]
}



