{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "clean",
            "type": "shell",
            "command": "./gradlew clean",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "build",
            "type": "shell",
            "command": "./gradlew build",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": "build",
            "dependsOn": "clean"
        },
        {
            "label": "run",
            "type": "shell",
            "command": "./gradlew run",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "dependsOn": "build"
        }
    ]
}



