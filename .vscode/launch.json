{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Launch Deadwood",
            "request": "launch",
            "mainClass": "Deadwood",
            "classPaths": [
                "\"${workspaceFolder}/build/classes/java/main\"",
                "\"${workspaceFolder}/build/resources/main\"",
                "\"${workspaceFolder}/lib/gson-2.10.1.jar\"",
                "\"${workspaceFolder}/lib/javafx-sdk-17.0.12/lib\""
            ],
            "vmArgs": "--module-path \"${workspaceFolder}/lib/javafx-sdk-17.0.12/lib\" --add-modules javafx.controls,javafx.fxml",
            "cwd": "${workspaceFolder}",
            "preLaunchTask": "build",
            "stepFilters": {
                "skipClasses": [
                "java.*", 
                "javax.*", 
                "sun.*", 
                "com.sun.*", 
                "jdk.internal.*",  // Added jdk.internal
                "javafx.*",        // Add javafx internal classes
                "java.base.*",      // Skip core base modules
                "java.security.*"   // Skip security-related internal calls
                ]
            }
        },
        {
            "type": "java",
            "name": "Debug Deadwood",
